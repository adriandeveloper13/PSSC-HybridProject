@model IEnumerable<University.Models.Teacher.Teacher>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<input type="button" class="add-teacher-view-button" value="Add teacher" onclick="location.href = '@Url.Action("Add", "Teacher")'"/>

<input type="button" class="students-view-button" value="Students" onclick="location.href='@Url.Action("GetAllStudents", "Student")'" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@model IEnumerable<University.Models.Deanship.Faculty>

@{
    ViewBag.Title = "ListFaculties";
}

<h2>Faculties</h2>

<input type="button" class="create-faculty-btn" value="Add new Faculty" onclick="location.href='@Url.Action("AddFaculty", "Deanship")'" />
<input type="button" class="see-teachers-list-btn" value="Teachers" onclick="location.href='@Url.Action("GetAll", "Teacher")'" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Website)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@section Scripts {
    @Scripts.Render("~/bundles/deanshipScript")
}



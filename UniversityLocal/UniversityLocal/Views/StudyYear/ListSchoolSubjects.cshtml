@model IEnumerable<University.Models.StudyYear.SchoolSubject>

@{
    ViewBag.Title = "SchoolSubjects";
}

<h2>SchoolSubjects</h2>

<input type="button" class="create-schoolSubject-view-button" value="Add SchoolSubject" onclick="location.href = '@Url.Action("AddSchoolSubject", "StudyYear")'" />
<input type="button" class="courses-view-button" value="Courses" onclick="location.href = '@Url.Action("GetAllCourses", "StudyYear")'" />
<input type="button" class="laboratories-view-button" value="Labs" onclick="location.href = '@Url.Action("GetAllLaboratories", "StudyYear")'" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExamProportion.FinalProportion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credits.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EvaluationType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExamProportion.FinalProportion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Credits.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EvaluationType)
        </td>
        <td>
            <input type="button" value="Edit" class="edit-schoolSubject-btn" onclick="schoolSubjectModule.editSchoolSubject('@item.Id.UniqueId')" />|
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@section Scripts{
    @Scripts.Render("~/bundles/schoolSubjectScript")
}